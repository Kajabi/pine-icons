{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "baseUrl": ".",
    "declaration": false,
    "experimentalDecorators": true,
    "jsx": "react",
    "jsxFactory": "h",
    "lib": ["dom", "es2017"],
    "module": "esnext",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "paths": {
      "@utils/*": ["src/utils/*"]
    },
    "removeComments": false,
    "target": "es2017"
  },
  "include": ["src", "scripts/**/*.ts"],
  "exclude": ["node_modules"]
}
